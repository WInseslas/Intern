{% extends 'template.html.twig' %}

{% block title %}User creation | MODAFA{% endblock %}

{% block pageTitle %}
    <h1 class="mt-4 text-center">User creation</h1>
{% endblock %}


{% block body %}
    <div class="container mt-4" >
        <div class="starter-template">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-xl-9">
                        <div class="card shadow" style="border-radius: 15px;">
                            {% include "partials/_flash.html.twig" %}
                            <div class="card-body">
                                {{ form_start(registrationForm) }}
                                    <div class="row align-items-center pt-4 pb-3">
                                        <div class="col-md-3 ps-5">
                                            <h6 class="mb-0">{{ form_label(registrationForm.email) }}</h6>
                                        </div>
                                        <div class="col-md-9 pe-5">
                                            {{ form_widget(registrationForm.email) }}
                                            <div class="invalid-feedback d-block">{{ form_errors(registrationForm.email) }}</div>
                                        </div>
                                    </div>
                                    <hr class="mx-n3">
                                    <div class="row align-items-center py-3">
                                        <div class="col-md-3 ps-5">
                                            <h6 class="mb-0">{{ form_label(registrationForm.fullname) }}</h6>
                                        </div>
                                        <div class="col-md-9 pe-5">
                                            {{ form_widget(registrationForm.fullname) }}
                                            <div class="invalid-feedback d-block">{{ form_errors(registrationForm.fullname) }}</div>
                                        </div>
                                    </div>
                                    <hr class="mx-n3">
                                    <div class="px-5 py-4">
                                        <button type="submit" class="d-grid col-12 mx-auto btn btn-primary btn-lg">Register</button>
                                    </div>
                                {{ form_end(registrationForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
