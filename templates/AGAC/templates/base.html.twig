<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="images/php.png">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary rounded fixed-top" aria-label="Eleventh navbar example" style="background-color: #eee;">
            <div class="container-fluid">
                <a class="navbar-brand fw-bolder" href="">A.G.A.C.</a>
                <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample09" aria-controls="navbarsExample09" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse" id="navbarsExample09">
                    <div class="navbar-collapse collapse" id="navbarsExample09" style="">
                        {% block header %}
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item fw-bolder">
                                    <a class="nav-link {% if current_menu == path('app_home') %}active {% endif %}" aria-current="page" href="{{ path('app_home') }}">Acceuil</a>
                                </li>
                                <li class="nav-item fw-bolder">
                                    <a class="nav-link" href="{{ path('authentication.login') }}">Se connecter</a>
                                </li>
                                <li class="nav-item fw-bolder">
                                    <a class="nav-link" href="{{ path('authentication.register') }}">S'inscrire</a>
                                </li>
                            </ul>
                        {% endblock %}
                    </div>
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}


        <div class="container">
            <footer class="py-5">
                <div class="row">
                    {% block footer %}
                        {% include "partials/_footer.html.twig" %}
                    {% endblock %}
                    </div>
                        <div class="d-flex justify-content-between py-4 my-4 border-top">
                            <p>
                                <span>Copyright © <script>document.write(new Date().getFullYear());</script>2022</span> 
                                <i>Winseslas. Tous droits réservés.</i>
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
        
    </body>
</html>