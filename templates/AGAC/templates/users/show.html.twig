{% extends 'admin.html.twig' %}

{% block title %}{{ user.getLastname() }} | MODAFA AGAC{% endblock %}

{% block nav %}
    <ul class="nav flex-column text-center">
        <li class="nav-item">
            <a class="nav-link active fw-bolder" aria-current="page" href="#">
                <span data-feather="home"></span>
                Pages
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link {% if current_menu == path('app_home') %}active {% endif %}" href="{{ path('app_home') }}">
                <span data-feather="file"></span>
                Acceuil
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link {% if current_menu == path('users.index') %}active {% endif %}" href="{{ path('users.index') }}">
                <span data-feather="shopping-cart"></span>
                Retour
            </a>
        </li>
    </ul>
{% endblock %}

{% block element %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
        <p class="h2">Details</p>
    </div>
{% endblock %}

{% block body %}
    <div class="container mb-4">
        <div class="row flex">
            
            <div class="col-xl-6 col-sm-12 col-12 mb-4">
                <div class="card">
                    <div class="view overlay">
                        <img class="card-img-top" src="/images/illustration-2.png" alt="Card image cap">
                        
                    </div>
                </div>
            </div>

            <div class="col-xl-6 col-sm-12 col-12 mb-4">
                <div class="card-body elegant-color white-text rounded-bottom">
                    <table class="table  table-striped table-hover">
                        <thead>
                            <tr class="table-active">
                                <th colspan="2" class="card-title text-center">
                                    {{ user.getLastName() |upper }} 
                                    {% if user.FirstName() != null %} 
                                        {{ user.getFirstName() |capitalize }}
                                    {% endif %}
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr class="card-text white-text mb-4" style="text-align: center;">
                                <td class="fw-bolder">Theme :</td>
                                <td>
                                    {% if  user.getOtherInformations().topic != null %}
                                        {{ user.getOtherInformations().topic }}
                                    {% endif %}
                                </td>
                            </tr>

                            <tr class="card-text white-text mb-4" style="text-align: center;">
                                <td class="fw-bolder">Date de naissance :</td>
                                <td> {{ user.getDateOfBirth() }} &nbsp;&nbsp;<strong>({{ user.getYear() }})</strong> ans</td>
                            </tr>

                            <tr class="card-text white-text mb-4" style="text-align: center;">
                                <td class="fw-bolder">Etablissement :</td>
                                <td>{{ user.getOtherInformations().school }}</td>
                            </tr>

                            <tr class="card-text white-text mb-4" style="text-align: center;">
                                <td class="fw-bolder text-center" colspan="2">Dur√©e</td>
                            </tr>
                            <tr class="card-text white-text" style="text-align: center;">
                                <td rowspan="2" >Debut : </td>
                            </tr>
                            <tr class="card-text white-text" style="text-align: center;">
                                <td>
                                    {{ user.getStartDate()}}
                                </td>
                            </tr class="card-text white-text" style="text-align: center;">
                            <tr class="card-text white-text" style="text-align: center;">
                                <td rowspan="2">Fin : </td>
                            </tr>
                            <tr class="card-text white-text" style="text-align: center;">
                                <td>
                                    {{ user.getStartDate()}}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}