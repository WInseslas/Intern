{% extends 'error.html.twig' %}

{% block body %}
    <div id="layoutError">
            <div id="layoutError_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-6">
                                <div class="text-center mt-4">
                                    <h1 class="display-1">403</h1>
                                    <p class="lead">Forbidden</p>
                                    <p>The request contained valid data and was understood by the server, but the server is refusing action.</p>
                                    <a href="{{ path('app_main') }}">
                                        <i class="fas fa-arrow-left me-1"></i>
                                        Return to Home
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutError_footer">
               {{ include('partials/_footer_dashboard.html.twig') }}
            </div>
        </div>
{% endblock %}
