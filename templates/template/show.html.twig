
{% extends 'template.html.twig' %}

{% block title %}Template | MODAFA{% endblock %}

{% block logo %}<link rel="icon" href="/assets/images/php.png">{% endblock %}

{% block stylesheets %}
    <link href="/assets/css/styles.css" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <script src="/assets/js/scripts.js"></script>
    <script src="/node_modules/jquery/dist/jquery.min.js"></script>
{% endblock %}

{% block pageTitle %}{% endblock %}

{% block body %}
    <h1>Template</h1>

    <div class="container d-flex flex-row-reverse bd-highlight">
        <a href="{{ path('app_template_edit', {'id': template.id, 'slug': template.slug }) }}" class="btn btn-success p-2 bd-highlight">Edit</a>
        &nbsp;&nbsp;<a href="{{ path('app_template_index') }}" class="btn btn-info p-2 bd-highlight">Back to list</a>
        &nbsp;&nbsp;{{ include('template/_delete_form.html.twig') }}
    </div>

    <div class="card-body elegant-color white-text rounded-bottom">
        <table class="table  table-striped table-hover">
            <tbody>
                <tr>
                    <th>Wording</th>
                    <td>{{ template.wording }}</td>
                </tr>
                <tr>
                    <th>Created at</th>
                    <td>{{ template.createdAt ? template.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <td colspan="2">
                        <iframe src="{{ '/assets/uploads/templates/' ~ template.file }}" height="760px" width="100%" align="middle"></iframe>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
